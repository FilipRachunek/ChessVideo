<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>

  <!-- Spring / framework-generated -->
  <Match>
    <Package name="~.*\.generated\..*" />
  </Match>

  <!-- DTOs & records -->
  <Match>
    <Class name="~.*Dto$" />
  </Match>

  <!-- Configuration classes -->
  <Match>
    <Class name="~.*Config$" />
  </Match>

  <!-- Lombok false positives (if used) -->
  <Match>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
  </Match>

</FindBugsFilter>
